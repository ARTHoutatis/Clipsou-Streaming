# Compression Brotli (meilleure que GZIP, si disponible)
<IfModule mod_brotli.c>
  AddOutputFilterByType BROTLI_COMPRESS text/html text/plain text/xml text/css text/javascript application/javascript application/json
  AddOutputFilterByType BROTLI_COMPRESS image/svg+xml
</IfModule>

# Compression GZIP pour accélérer le chargement (fallback)
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
  AddOutputFilterByType DEFLATE image/svg+xml
  
  # Compression GZIP niveau optimal
  DeflateCompressionLevel 6
</IfModule>

# Cache du navigateur pour les images et assets statiques
<IfModule mod_expires.c>
  ExpiresActive On
  
  # Images - cache long (1 an)
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/avif "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  
  # CSS et JavaScript - cache moyen (1 mois)
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
  
  # Fonts - cache long (1 an)
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"
  
  # HTML - cache court (1 heure)
  ExpiresByType text/html "access plus 1 hour"
  
  # Favicon
  ExpiresByType image/x-icon "access plus 1 year"
</IfModule>

# ETag pour validation de cache
<IfModule mod_headers.c>
  # Permettre la validation de cache
  Header unset ETag
  FileETag None
  
  # Sécurité et performance
  Header set X-Content-Type-Options "nosniff"
  Header set X-Frame-Options "SAMEORIGIN"
  
  # Cache-Control pour les images (optimisé avec stale-while-revalidate)
  <FilesMatch "\.(webp|avif|jpg|jpeg|png|gif|svg|ico)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
    Header set Vary "Accept"
    # Accepter les formats d'images modernes
    Header append Accept-CH "Sec-CH-Width, Sec-CH-Viewport-Width, Sec-CH-DPR"
  </FilesMatch>
  
  # Cache-Control pour CSS/JS avec stale-while-revalidate
  <FilesMatch "\.(css|js)$">
    Header set Cache-Control "public, max-age=2592000, stale-while-revalidate=86400"
  </FilesMatch>
  
  # Cache-Control pour HTML (court mais avec revalidation)
  <FilesMatch "\.(html)$">
    Header set Cache-Control "public, max-age=3600, must-revalidate"
  </FilesMatch>
  
  # Préchargement des images critiques via Link headers
  <FilesMatch "index\.html$">
    Header add Link "</images/La1.webp>; rel=preload; as=image; type=image/webp"
    Header add Link "</images/loupe.webp>; rel=preload; as=image; type=image/webp"
  </FilesMatch>
</IfModule>

# Compression pour les anciennes versions d'Apache
<IfModule mod_gzip.c>
  mod_gzip_on Yes
  mod_gzip_dechunk Yes
  mod_gzip_item_include file \.(html?|txt|css|js|php|pl)$
  mod_gzip_item_include mime ^text/.*
  mod_gzip_item_include mime ^application/x-javascript.*
  mod_gzip_item_exclude mime ^image/.*
  mod_gzip_item_exclude rspheader ^Content-Encoding:.*gzip.*
</IfModule>

# Préchargement HTTP/2 Server Push (si supporté)
<IfModule mod_http2.c>
  H2Push on
  H2PushPriority * after
  H2PushPriority text/css before
  H2PushPriority image/webp interleaved
  H2PushPriority image/avif interleaved
  # Optimiser les connexions HTTP/2
  H2MaxSessionStreams 100
  H2StreamMaxMemSize 65536
</IfModule>

# Keep-Alive pour réduire la latence
<IfModule mod_headers.c>
  Header set Connection keep-alive
</IfModule>

# Optimisation des connexions Keep-Alive
KeepAlive On
KeepAliveTimeout 5
MaxKeepAliveRequests 100

# Optimisation serveur pour images
<IfModule mod_setenvif.c>
  # Désactiver l'accès direct aux fichiers image sans referer (protection hotlinking légère)
  SetEnvIfNoCase Referer "^$" allow_hotlink
  SetEnvIfNoCase Referer "^https://clipsoustreaming\.com" allow_hotlink
  SetEnvIfNoCase Referer "^https://www\.clipsoustreaming\.com" allow_hotlink
</IfModule>

# Priorités de chargement pour les images
<IfModule mod_headers.c>
  # Priority hints pour les images Above The Fold
  <FilesMatch "^(La1|loupe|apercu|Al1|Ja1|Ka1)\.webp$">
    Header set Priority "high"
  </FilesMatch>
  
  # Priority hints pour les autres images
  <FilesMatch "\.(webp|avif|jpg|jpeg|png)$">
    Header set Priority "auto"
  </FilesMatch>
</IfModule>
